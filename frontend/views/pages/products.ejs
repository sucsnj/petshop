<div id="produtoMenu" class="container">
    <div class="row">
        <div class="col s3">
            <a id="btn_novoProduto" class="waves-effect waves-light btn blue darken-3">
                <i class="material-icons left">add</i>Novo
            </a>
        </div>
    </div>

    <form id="produtoForm" class="card-panel blue lighten-5">
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">shopping_bag</i>
                <input id="nameProduto" name="name" type="text" data-label="Nome do Produto" class="validate">
                <label for="nameProduto">Nome do Produto</label>
            </div>
            <div class="input-field col s6">
                <i class="material-icons prefix">attach_money</i>
                <input id="price" name="price" type="number" data-label="Preço" class="validate">
                <label for="price">Preço</label>
            </div>
            <div class="input-field col s6">
                <i class="material-icons prefix">category</i>
                <input id="category" name="category" type="text" data-label="Categoria" class="validate">
                <label for="category">Categoria</label>
            </div>
            <div class="input-field col s6">
                <i class="material-icons prefix">inventory</i>
                <input id="stock" name="stock" type="number" data-label="Estoque" class="validate">
                <label for="stock">Estoque</label>
            </div>
        </div>

        <div class="row">
            <div class="col s3">
                <a id="btn_salvarProduto" class="waves-effect waves-light btn green">
                    <i class="material-icons left">send</i>Enviar
                </a>
            </div>
            <div class="col s3">
                <a id="btn_voltarProduto" class="waves-effect waves-light btn red">
                    <i class="material-icons left">arrow_back</i>Voltar
                </a>
            </div>
        </div>
    </form>

    <table id="table_produto" class="highlight centered striped">
        <thead class="blue darken-3 white-text">
            <tr>
                <th>Nome</th>
                <th>Preço</th>
                <th>Categoria</th>
                <th>Estoque</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody id="produto_list">
            <!-- lista de produtos gerada aqui -->
        </tbody>
    </table>
</div>
