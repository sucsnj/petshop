            <h4 class="center-align">📊 Estatísticas do PetShop</h4>
        </div>

        <!-- Área do gráfico -->
        <div class="col s12 card-panel white z-depth-2">
            <div class="col s3">
                <canvas id="quantidade" width="200" height="100"></canvas>
            </div>
            <div class="col s3">
                <canvas id="faturamento" width="200" height="100"></canvas>
            </div>
            <div class="col s3">
                <canvas id="statusPedidos" width="200" height="100"></canvas>
            </div>
            <div class="col s3">
                <canvas id="servicosTipo" width="200" height="100"></canvas>
            </div>
        </div>
    </div>
