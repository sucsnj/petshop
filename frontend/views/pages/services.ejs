<div id="servicoMenu" class="container">
    <div class="row">
        <div class="col s3">
            <a id="btn_novoServico" class="waves-effect waves-light btn blue darken-3">
                <i class="material-icons left">add</i>Novo
            </a>
        </div>
    </div>

    <form id="servicoForm" class="card-panel blue lighten-5">
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">local_hospital</i>
                <input id="nameServico" name="name" type="text" data-label="Nome do Serviço" class="validate">
                <label for="nameServico">Nome do Serviço</label>
            </div>
            <div class="input-field col s6">
                <i class="material-icons prefix">attach_money</i>
                <input id="price" name="price" type="number" data-label="Preço" class="validate">
                <label for="price">Preço</label>
            </div>
            <div class="input-field col s6">
                <i class="material-icons prefix">schedule</i>
                <input id="duration" name="duration" type="text" data-label="Duração" class="validate">
                <label for="duration">Duração</label>
            </div>
            <div class="input-field col s6">
                <i class="material-icons prefix">description</i>
                <input id="description" name="description" type="text" data-label="Descrição" class="validate">
                <label for="description">Descrição</label>
            </div>
        </div>

        <div class="row">
            <div class="col s3">
                <a id="btn_salvarServico" class="waves-effect waves-light btn green">
                    <i class="material-icons left">send</i>Enviar
                </a>
            </div>
            <div class="col s3">
                <a id="btn_voltarServico" class="waves-effect waves-light btn red">
                    <i class="material-icons left">arrow_back</i>Voltar
                </a>
            </div>
        </div>
    </form>

    <table id="table_servico" class="highlight centered striped">
        <thead class="blue darken-3 white-text">
            <tr>
                <th>Nome</th>
                <th>Preço</th>
                <th>Duração</th>
                <th>Descrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody id="servico_list">
            <!-- lista de serviços gerada aqui -->
        </tbody>
    </table>
</div>
